<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartHomeHub.MainPage"
             BackgroundColor="AntiqueWhite"
             >

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            
            <Label
                Text="Hello, World!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                TextColor="Black"
                HorizontalOptions="Center" />

            <Entry
                x:Name="NameField"
                Placeholder="Имя"
                Keyboard="Text"
                />
            <Entry
                x:Name="LastNameField"
                Placeholder="Фамилия"
                Keyboard="Text"
                />
            <Entry
                x:Name="PhoneField"
                Placeholder="Номер Телефона"
                Keyboard="Telephone"
                />

            <Button
                x:Name="Conect"
                Text="Conect"
                Clicked="OnConectClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
